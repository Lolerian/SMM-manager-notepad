        <Line X1="988" Y1="252" X2="1487" Y2="252" StrokeThickness="1" Stroke="Black" Opacity="0.3"></Line>
        <Line X1="988" Y1="266" X2="1487" Y2="266" StrokeThickness="1" Stroke="Black" Opacity="0.3"></Line>
        <Line X1="988" Y1="281" X2="1487" Y2="281" StrokeThickness="1" Stroke="Black" Opacity="0.3"></Line>
        <Line X1="988" Y1="298" X2="1487" Y2="298" StrokeThickness="1" Stroke="Black" Opacity="0.3"></Line>
        <Line X1="988" Y1="315" X2="1487" Y2="315" StrokeThickness="1" Stroke="Black" Opacity="0.3"></Line>
        <Line X1="988" Y1="330" X2="1487" Y2="330" StrokeThickness="1" Stroke="Black" Opacity="0.3"></Line>
        <Line X1="988" Y1="345" X2="1487" Y2="345" StrokeThickness="1" Stroke="Black" Opacity="0.3"></Line>
